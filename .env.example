# RezNet AI - Local MVP Environment Configuration

# ============================================
# Database Configuration (Docker)
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/reznetai_local
REDIS_URL=redis://localhost:6379

# ============================================
# Authentication (Disabled for Local MVP)
# ============================================
AUTH_ENABLED=false
LOCAL_USER_ID=local-dev-user
LOCAL_USER_NAME=Developer

# ============================================
# LLM Providers (Multi-Provider Support)
# ============================================

# Anthropic Claude (Primary)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022
# Options: claude-3-5-sonnet-20241022, claude-3-haiku-20240307, claude-3-opus-20240229

# OpenAI (Optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo

# Ollama (Optional - Local Models)
OLLAMA_HOST=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama2
# Run: ollama pull llama2
USE_OLLAMA=false

# Default LLM Provider
DEFAULT_LLM_PROVIDER=anthropic
# Options: anthropic, openai, ollama

# ============================================
# MCP Servers (Local)
# ============================================
MCP_FILESYSTEM_ENABLED=true
MCP_FILESYSTEM_PORT=3001
MCP_FILESYSTEM_WORKSPACE=/Users/YOUR_USERNAME/reznet-ai/data/workspaces

MCP_GITHUB_ENABLED=true
MCP_GITHUB_PORT=3002
MCP_GITHUB_TOKEN=your-github-personal-access-token
# Create at: https://github.com/settings/tokens

MCP_DATABASE_ENABLED=false
MCP_DATABASE_PORT=3003

# ============================================
# Backend API Configuration
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=1
CORS_ORIGINS=http://localhost:3000

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_AUTH_ENABLED=false
NEXT_PUBLIC_APP_NAME=RezNet AI

# ============================================
# Local Storage
# ============================================
LOCAL_STORAGE_PATH=./data
UPLOAD_PATH=./data/uploads
WORKSPACE_PATH=./data/workspaces
AGENT_MEMORY_PATH=./data/agent-memory

# ============================================
# Development Settings
# ============================================
DEBUG=true
LOG_LEVEL=info
# Options: debug, info, warning, error, critical

HOT_RELOAD=true
ENABLE_LOCAL_METRICS=true
METRICS_PORT=9090

# ============================================
# AI Configuration
# ============================================
# Token limits per response
MAX_TOKENS_PER_RESPONSE=4000

# Temperature settings (creativity)
DEFAULT_TEMPERATURE=0.7

# Enable response caching
ENABLE_CACHE=true
CACHE_TTL=3600

# Enable embeddings cache
USE_EMBEDDINGS_CACHE=true
EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# Agent Configuration
# ============================================
# Maximum concurrent agents
MAX_CONCURRENT_AGENTS=5

# Task timeout (seconds)
TASK_TIMEOUT=300

# Enable agent memory/RAG
ENABLE_AGENT_MEMORY=true

# ============================================
# Security (Local Development)
# ============================================
# Secret key for sessions (generate with: openssl rand -hex 32)
SECRET_KEY=local-dev-secret-key-change-in-production

# Allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Feature Flags
# ============================================
ENABLE_VOICE_INPUT=false
ENABLE_CODE_EXECUTION=false
ENABLE_WEB_SEARCH=false
